<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiProjecto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <!--  <item name="colorPrimary">@color/purple_500</item>-->
          <item name="colorPrimaryVariant">@color/purple_700</item>
          <item name="colorOnPrimary">@color/white</item>
          <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="materialButtonStyle"> @style/myColor</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <!--Here, android: indeterminateDrawable sets the picture displayed in
       the animation or the xml file of this animation and android: indeterminateOnly
          This property is set to true,the progress bar will be ignored Progress and present
          an infinite loop of animation
   -->
    <style name="CircularDeterminateProgressBar" parent="Theme.MiProjecto">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="myColor" parent="Theme.MiProjecto">
        <item name="android:textColor">#FF1B1B1B</item>
    </style>

    <style name="bgColorDesactivado" parent="Theme.MiProjecto">
        <item name="android:backgroundTint">#FFE4E4E4</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <style name="bgDarckFondo" parent="Theme.MiProjecto">
        <item name="android:background">@color/white</item>
    </style>

    <style name="cvBackground" parent="Theme.MiProjecto">
        <item name="android:background">@drawable/card_borde_black</item>

    </style>

    <style name="cvBg" parent="Theme.MiProjecto">
        <item name="android:background">@drawable/chips_custom</item>
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="BottomNavigation" parent="Theme.MiProjecto">
<item name="android:background">@color/white</item>
<item name="itemIconTint">@color/purple_700</item>
<item name="itemTextColor">@color/purple_500</item>
    </style>

    <style name="chAction" parent="Widget.MaterialComponents.Chip.Action">

    </style>
</resources>